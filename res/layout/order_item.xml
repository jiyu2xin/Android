<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <TextView
        android:id="@+id/activity_order_item_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:singleLine="true"
        android:text="4月"
        android:textColor="@color/activity_item_text"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- 订单列表 -->

    <RelativeLayout
        android:id="@+id/activity_order_item_password_change"
        android:layout_below="@id/activity_order_item_month"
        android:layout_width="match_parent"
        android:layout_height="50dip" 
        android:background="@color/white" >

        <View
            android:id="@+id/activity_order_item_top_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            android:visibility="gone" />

        <View
            android:id="@+id/activity_order_item_top_half_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/separator" />

        <ImageView
            android:id="@+id/activity_order_item_password_change_go"
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_bargain_wallet" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dip"
            android:orientation="vertical"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/activity_order_item_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="红包金额"
                android:textColor="@color/activity_item_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_order_item_create_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="2015-5-28 17:30"
                android:textColor="@color/activity_item_text"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/activity_order_item_free_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="+50.00元"
                android:textColor="@color/activity_item_text"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginEnd="0dip"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="交易成功"
                android:textColor="@color/activity_item_text"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:id="@+id/activity_order_item_botton_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/separator"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/activity_order_item_botton_space"
        android:layout_below="@id/activity_order_item_password_change"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@color/white"
        android:visibility="gone"/>

</RelativeLayout>