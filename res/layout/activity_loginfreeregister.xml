<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_gray"
    android:orientation="vertical" >

    <include layout="@layout/activity_head" />

    <!-- 手机号 -->

    <RelativeLayout
        android:id="@+id/activity_loginfreeregister_item_rl_num"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/global_content_margin_left"
        android:layout_marginRight="@dimen/global_content_margin_right"
        android:layout_marginTop="@dimen/global_content_margin_top">


        <EditText
            android:id="@+id/activity_loginfreeregister_item_et_num"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_phone"
            android:background="@drawable/view_edit_item_bg"
            android:gravity="left|center_vertical"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/item_edittext"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- 验证码 -->

    <RelativeLayout
        android:id="@+id/activity_loginfreeregister_item_rl_code"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/global_content_margin_left"
        android:layout_marginRight="@dimen/global_content_margin_right"
        android:layout_marginTop="@dimen/global_content_margin_top">

        <EditText
            android:id="@+id/activity_loginfreeregister_item_et_code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_password"
            android:background="@drawable/view_edit_item_bg"
            android:gravity="left|center_vertical"
            android:hint="请填写验证码"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/item_edittext"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_loginfreeregister_item_tv_code"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/view_side_button_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="获取验证码"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- 协议部分 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/global_content_margin_left"
        android:layout_marginRight="@dimen/global_content_margin_right"
        android:layout_marginTop="@dimen/global_content_margin_top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_loginfreeregister_item_iv_comfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/global_view_margin_left"
            android:background="@drawable/sign_comfirm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center_vertical"
            android:text="阅读并同意"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_loginfreeregister_item_tv_comfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="@string/activity_login_comfim_text"
            android:textColor="@color/yellow"
            android:textSize="16sp" />
    </LinearLayout>
    
    <!-- 注册 -->

    <RelativeLayout
        android:id="@+id/activity_loginfreeregister_item_rl_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/global_content_margin_left"
        android:layout_marginRight="@dimen/global_content_margin_right"
        android:layout_marginTop="20dip"
        android:background="@drawable/view_bottom_button_bg" >

        <TextView
            android:id="@+id/activity_loginfreeregister_item_tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="免注册登陆"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

