<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="231dip"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:background="@color/light_gray" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/separator" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/room_item_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="14dip"
            android:singleLine="true"
            android:text="万科"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/room_item_register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dip"
            android:layout_marginTop="14dip"
            android:background="@drawable/room_selector_yellor_shape"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="支付定金"
            android:textColor="@color/global_main_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@color/separator" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/room_item_mylikes_iv"
            android:layout_width="93dip"
            android:layout_height="93dip"
            android:layout_margin="11dip"
            android:src="@drawable/ic_mylikes_room_default" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/room_item_mylikes_iv"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:singleLine="true"
                    android:text="小Q购房价:"
                    android:textColor="@color/global_main_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/room_item_tv_xiaoqa_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:singleLine="true"
                    android:text="50.39万"
                    android:textColor="@color/global_main_color"
                    android:textSize="26sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/room_item_tv_orgion_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:singleLine="true"
                android:text="原价:51.39万"
                android:textColor="@color/global_main_color"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:text="好友帮忙Q价最高可省"
                    android:textColor="@color/black"
                    android:textSize="10.6sp" />

                <TextView
                    android:id="@+id/room_item_tv_maxfree_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:text="3"
                    android:textColor="@color/global_main_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:text="万元，小Q给您全城最低价"
                    android:textColor="@color/black"
                    android:textSize="10.6sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@color/separator" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="56dip"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.5dip" >

            <TextView
                android:id="@+id/room_item_ic_select_room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:text="获取底价"
                android:textColor="@color/bg_gray"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/room_item_ic_select_room"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_above="@id/room_item_ic_select_room_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:src="@drawable/room_item_select_room" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/room_item_ic_towards1"
            android:layout_width="32dip"
            android:layout_height="7dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/room_item_towards" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.5dip" >

            <TextView
                android:id="@+id/room_item_ic_room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:text="实地看房"
                android:textColor="@color/bg_gray"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/room_item_ic_room"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_above="@id/room_item_ic_room_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:src="@drawable/room_item_look" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/room_item_ic_towards2"
            android:layout_width="32dip"
            android:layout_height="7dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/room_item_towards" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.5dip" >

            <TextView
                android:id="@+id/room_item_ic_pre_wallet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:text="已支付定金"
                android:textColor="@color/bg_gray"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/room_item_ic_pre_wallet"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_above="@id/room_item_ic_pre_wallet_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:src="@drawable/room_item_pre_wallet" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/room_item_ic_towards3"
            android:layout_width="32dip"
            android:layout_height="7dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/room_item_towards" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.5dip" >

            <TextView
                android:id="@+id/room_item_ic_weixin_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:text="朋友帮Q价"
                android:textColor="@color/bg_gray"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/room_item_ic_weixin_share"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_above="@id/room_item_ic_weixin_share_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:src="@drawable/room_item_weinxin_share" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/room_item_ic_towards4"
            android:layout_width="32dip"
            android:layout_height="7dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/room_item_towards" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.5dip" >

            <TextView
                android:id="@+id/room_item_ic_full_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:text="已付全款"
                android:textColor="@color/bg_gray"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/room_item_ic_full_amount"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_above="@id/room_item_ic_full_amount_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dip"
                android:src="@drawable/room_item_full_amount" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/separator" />

</LinearLayout>