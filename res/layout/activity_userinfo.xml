<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userinfor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_gray" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <include layout="@layout/activity_head" />

            <!-- 头像 -->
            <RelativeLayout
                android:id="@+id/activity_userinfo_item_change"
                android:layout_width="match_parent"
                android:layout_height="90dip"
                android:layout_marginTop="@dimen/global_content_margin_top"
                android:background="@drawable/shape_gray_item" >
                
<!-- 			    <View -->
<!-- 			        android:layout_width="match_parent" -->
<!-- 			        android:layout_height="0.5dp" -->
<!-- 			        android:background="@color/separator" /> -->

                <TextView
                    android:id="@+id/activity_userinfo_item_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:singleLine="true"
                    android:text="头像"
                    android:textColor="@color/activity_item_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/activity_userinfo_item_go"
		          	android:layout_width="86dip"
		         	android:layout_height="86dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_user"/>
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:layout_alignParentBottom="true"
			        android:background="@color/separator" />
            </RelativeLayout>
            
          
            <!-- 意见反馈 -->
            <RelativeLayout
                android:id="@+id/activity_config_item_feedback"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="@dimen/global_content_margin_top"
                android:background="@color/white" >
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/separator" />

                <TextView
                    android:id="@+id/activity_config_item_feedback_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:singleLine="true"
                    android:text="意见反馈"
                    android:textColor="@color/activity_item_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/activity_config_item_feedback_go"
		          	android:layout_width="@dimen/global_title_text_size"
		         	android:layout_height="@dimen/global_title_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_next"
                    android:visibility="gone" />
            </RelativeLayout>        
        </LinearLayout>

</RelativeLayout>