<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_gray" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" 
        android:background="@color/bg_gray">

        <include layout="@layout/activity_head" />

              
            <!-- 现金 -->
            <RelativeLayout
                android:id="@+id/activity_wallet_item_cash"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="@dimen/global_content_margin_top"
                android:background="@drawable/shape_gray_item" >
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/separator" />

                <TextView
                    android:id="@+id/activity_wallet_item_cash_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:singleLine="true"
                    android:text="现金"
                    android:textColor="@color/activity_item_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/activity_wallet_item_cash_go"
		          	android:layout_width="@dimen/global_title_text_size"
		         	android:layout_height="@dimen/global_title_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_next"
                    android:visibility="gone" />
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:layout_marginLeft="8dp"
			        android:layout_marginRight="8dp"
			        android:layout_alignParentBottom="true"
			        android:background="@color/separator" />
            </RelativeLayout>

            <!-- 红包 -->
            <RelativeLayout
                android:id="@+id/activity_wallet_item"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/shape_gray_item" >
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:layout_marginLeft="8dp"
			        android:layout_marginRight="8dp"
			        android:background="@color/separator" />

                <TextView
                    android:id="@+id/activity_wallet_item_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:singleLine="true"
                    android:text="红包"
                    android:textColor="@color/activity_item_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/activity_wallet_item_go"
		          	android:layout_width="@dimen/global_title_text_size"
		         	android:layout_height="@dimen/global_title_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_next"
                    android:visibility="gone" />
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_alignParentBottom="true"
			        android:layout_height="0.5dp"
			        android:background="@color/separator" />
            </RelativeLayout>
            
            <!-- 现金提取 -->
            <RelativeLayout
                android:id="@+id/activity_config_item_feedback"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="@dimen/global_content_margin_top"
                android:background="@color/white" >
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/separator" />

                <TextView
                    android:id="@+id/activity_config_item_feedback_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:singleLine="true"
                    android:text="现金提取"
                    android:textColor="@color/activity_item_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/activity_config_item_feedback_go"
		          	android:layout_width="@dimen/global_title_text_size"
		         	android:layout_height="@dimen/global_title_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_next" />
            </RelativeLayout>
            
            <!-- 红包记录 -->
            <RelativeLayout
                android:id="@+id/activity_wallet_record"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white" >
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:layout_marginLeft="8dp"
			        android:layout_marginRight="8dp"
			        android:background="@color/separator" />

                <TextView
                    android:id="@+id/activity_wallet_record_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:singleLine="true"
                    android:text="红包记录"
                    android:textColor="@color/activity_item_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/activity_wallet_record_go"
		          	android:layout_width="@dimen/global_title_text_size"
		         	android:layout_height="@dimen/global_title_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_next" />
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_alignParentBottom="true"
			        android:layout_height="0.5dp"
			        android:background="@color/separator" />
            </RelativeLayout>
            
           <!-- 支付密码 -->
            <RelativeLayout
                android:id="@+id/activity_wallet_secret"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="@dimen/global_content_margin_top"
                android:background="@color/white" >
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/separator" />

                <TextView
                    android:id="@+id/activity_wallet_secret_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:singleLine="true"
                    android:text="支付密码"
                    android:textColor="@color/activity_item_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/activity_wallet_secret_go"
		          	android:layout_width="@dimen/global_title_text_size"
		         	android:layout_height="@dimen/global_title_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_next"
                    android:visibility="gone" />
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_alignParentBottom="true"
			        android:layout_height="0.5dp"
			        android:background="@color/separator" />
            </RelativeLayout>
        </LinearLayout>


</RelativeLayout>