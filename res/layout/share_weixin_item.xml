    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/activity_share_weixin_item_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
