<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"

    android:background="@drawable/shape_dialog_qcall"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="小Q电话 400-886-7733"
        android:textColor="@color/gray_new"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dip"
        android:background="@color/separator" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <!-- 支付宝支付 -->

        <RelativeLayout
            android:id="@+id/activity_bargain_pay_by_alipay_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <!-- android:background="@drawable/shape_gray_item" -->

            <TextView
                android:id="@+id/activity_qcall_comfirm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_bargain_pay_by_alipay_icon"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="拨打"
                android:textColor="@color/activity_item_text"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/separator" />

        <!-- 微信支付 -->

        <RelativeLayout
            android:id="@+id/activity_bargain_pay_by_wxpay_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <!-- android:background="@drawable/shape_gray_item" -->

            <TextView
                android:id="@+id/activity_qcall_cancle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_bargain_pay_by_wxpay_icon"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="取消 "
                android:textColor="@color/activity_item_text"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>