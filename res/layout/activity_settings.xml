            <!-- 修改登录密码 -->
            <RelativeLayout
                android:id="@+id/activity_config_item_password_change"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="@dimen/global_content_margin_top"
                android:background="@color/white" >
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/separator" />

                <TextView
                    android:id="@+id/activity_config_item_password_change_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:singleLine="true"
                    android:text="修改登录密码"
                    android:textColor="@color/activity_item_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/activity_config_item_password_change_go"
		          	android:layout_width="@dimen/global_title_text_size"
		         	android:layout_height="@dimen/global_title_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_next"
                    android:visibility="gone" />
                
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="0.5dp"
			        android:layout_alignParentBottom="true"
			        android:background="@color/separator" />
            </RelativeLayout>
            
            <!-- 用户协议 -->
            <RelativeLayout
                android:id="@+id/activity_config_item_agreement"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="@dimen/global_content_margin_top"
