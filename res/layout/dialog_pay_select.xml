<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/activity_bargain_pay_select_dialog_rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal" 
    android:orientation="vertical" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:background="@color/paymentdialogbg" >
  
    <!-- 选择支付方式 -->
    <LinearLayout 
        android:orientation="vertical" 
        android:background="@color/white" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" >
        
        <TextView
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
        	android:paddingTop="10dip"
        	android:paddingBottom="10dip"
        	android:gravity="center" 
            android:text="请选择支付方式"
            android:textSize="24sp"
            android:textColor="@color/gray_new" />
        
        <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/separator" />
       
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="150dip" >
            
	        <!-- 支付宝支付 -->
	        <RelativeLayout
	            android:id="@+id/activity_bargain_pay_by_alipay_rl"
	            android:layout_weight="1"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center" >
	            <!-- android:background="@drawable/shape_gray_item" -->
	            
	            <ImageView
	                android:id="@+id/activity_bargain_pay_by_alipay_icon"
		        	android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:layout_marginBottom="5dip"
	                android:layout_centerHorizontal="true"
	                android:background="@drawable/ic_alipay" />
	            
	            <TextView
	                android:id="@+id/activity_bargain_pay_by_alipay_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/activity_bargain_pay_by_alipay_icon"
	                android:layout_centerHorizontal="true"
	                android:singleLine="true"
	                android:text="支付宝支付"
	                android:textColor="@color/activity_item_text"
	                android:textSize="16sp" />
	        </RelativeLayout>
	       
	        <!-- 微信支付 -->
	        <RelativeLayout
	            android:id="@+id/activity_bargain_pay_by_wxpay_rl"
	            android:layout_weight="1"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center" >
	            <!-- android:background="@drawable/shape_gray_item" -->
	            
	            <ImageView
	                android:id="@+id/activity_bargain_pay_by_wxpay_icon"
		        	android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:layout_marginBottom="5dip"
	                android:layout_centerHorizontal="true"
	                android:background="@drawable/ic_wxpay" />
	            
	            <TextView
	                android:id="@+id/activity_bargain_pay_by_wxpay_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/activity_bargain_pay_by_wxpay_icon"
	                android:layout_centerHorizontal="true"
	                android:singleLine="true"
	                android:text="  微信支付  "
	                android:textColor="@color/activity_item_text"
	                android:textSize="16sp" />
	        </RelativeLayout>
            
            
            
            
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>