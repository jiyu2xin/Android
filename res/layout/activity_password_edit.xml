<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg_gray" >
    
    <include layout="@layout/activity_head"/>
    

    
    <!-- 输入旧密码 -->
    <RelativeLayout
        android:id="@+id/activity_password_edit_item_rl_old"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/global_content_margin_left"
        android:layout_marginRight="@dimen/global_content_margin_right"
        android:layout_marginTop="@dimen/global_content_margin_top"
        android:background="@drawable/view_item_bg" >

        <ImageView
            android:id="@+id/activity_password_edit_item_iv_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_view_margin_left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_old_password" />

        <EditText
            android:id="@+id/activity_password_edit_item_et_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/activity_password_edit_item_iv_old"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@null"
            android:gravity="left"
            android:singleLine="true"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:textColorHint="@color/item_edittext"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
        
    <!-- 设置新密码 -->
    <RelativeLayout
        android:id="@+id/activity_password_edit_item_rl_new"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/global_content_margin_left"
        android:layout_marginRight="@dimen/global_content_margin_right"
        android:layout_marginTop="@dimen/global_content_margin_top"
        android:background="@drawable/view_item_bg" >

        <ImageView
            android:id="@+id/activity_password_edit_item_iv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_view_margin_left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_password" />

        <EditText
            android:id="@+id/activity_password_edit_item_et_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/activity_password_edit_item_iv_new"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@null"
            android:gravity="left"
            android:singleLine="true"
            android:hint="请设置新密码"
            android:inputType="textPassword"
            android:textColorHint="@color/item_edittext"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <!-- 确认密码 -->
    <RelativeLayout
        android:id="@+id/activity_password_edit_item_rl_num"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/global_content_margin_left"
        android:layout_marginRight="@dimen/global_content_margin_right"
        android:layout_marginTop="@dimen/global_content_margin_top"
        android:background="@drawable/view_item_bg" >

        <ImageView
            android:id="@+id/activity_password_edit_item_iv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_view_margin_left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_confirm_password" />

        <EditText
            android:id="@+id/activity_password_edit_item_et_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/activity_password_edit_item_iv_num"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@null"
            android:gravity="left"
            android:singleLine="true"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:textColorHint="@color/item_edittext"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <!-- 确认修改 -->
    <RelativeLayout
        android:id="@+id/activity_password_edit_item_rl_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/global_content_margin_left"
        android:layout_marginRight="@dimen/global_content_margin_right"
        android:layout_marginTop="50dip"
        android:background="@drawable/view_bottom_button_bg" >

        <TextView
            android:id="@+id/activity_password_edit_item_tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    

</LinearLayout>
